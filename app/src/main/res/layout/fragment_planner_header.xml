<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/selected_item"
    tools:context="com.miguelpalacio.mymacros.PlannerFragment">

    <!-- Targets. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_background"
        android:elevation="1dp"
        android:orientation="vertical" >

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/planner_targets"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/accent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <!-- Progress bars. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Protein progress. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="@string/planner_target_protein"
                    android:paddingTop="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/primary_text"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/planner_progress_bar_protein"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:max="100"
                        android:progress="75"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_color_protein"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/planner_percentage_protein"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="12sp"
                            android:gravity="left"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"/>

                        <TextView
                            android:id="@+id/planner_taken_protein"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="132/155.8 g"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Carbohydrates progress. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="@string/planner_target_carbs"
                    android:paddingTop="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/primary_text"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/planner_progress_bar_carbs"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:max="100"
                        android:progress="75"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_color_carbs"
                        android:text="132/155.8 g"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/planner_percentage_carbs"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="12sp"
                            android:gravity="left"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"/>

                        <TextView
                            android:id="@+id/planner_taken_carbs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="132/155.8 g"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Fat progress. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="@string/planner_target_fat"
                    android:paddingTop="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/primary_text"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/planner_progress_bar_fat"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:max="100"
                        android:progress="75"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_color_fat"
                        android:text="132/155.8 g"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/planner_percentage_fat"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="12sp"
                            android:gravity="left"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"/>

                        <TextView
                            android:id="@+id/planner_taken_fat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="132/155.8 g"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Fiber progress. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="@string/planner_target_fiber"
                    android:paddingTop="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/primary_text"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/planner_progress_bar_fiber"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:max="100"
                        android:progress="75"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_color_fiber"
                        android:text="132/155.8 g"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/planner_percentage_fiber"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="12sp"
                            android:gravity="left"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"/>

                        <TextView
                            android:id="@+id/planner_taken_fiber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="132/155.8 g"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Energy progress. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="@string/planner_target_energy"
                    android:paddingTop="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/primary_text"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/planner_progress_bar_energy"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:max="100"
                        android:progress="75"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_color_default"
                        android:text="132/155.8 g"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/planner_percentage_energy"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="12sp"
                            android:gravity="left"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"/>

                        <TextView
                            android:id="@+id/planner_taken_energy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="132/155.8 g"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/secondary_text"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <!-- Today's Plan (label only). -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_background"
        android:elevation="1dp"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/planner_today_plan"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/accent"/>
    </LinearLayout>

    <!-- The List goes "here". -->
</LinearLayout>
