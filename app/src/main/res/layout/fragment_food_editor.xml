<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.miguelpalacio.mymacros.FoodEditorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Food Name. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical" >

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/food_name"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/accent"/>

            <EditText android:id="@+id/food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:textSize="16sp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:inputType="text"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Food Portion. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical" >

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/food_portion"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/accent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/food_portion_quantity"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start"
                    android:textColor="@color/secondary_text"/>

                <EditText android:id="@+id/food_portion"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"
                    android:textSize="16sp"
                    android:layout_marginRight="13dp"
                    android:layout_marginEnd="13dp"
                    android:inputType="numberDecimal"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/portion_units_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Food Macronutrients. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/food_macronutrients"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/accent"/>

            <!-- Protein. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/food_protein"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start"
                    android:textColor="@color/secondary_text"/>

                <EditText android:id="@+id/food_protein"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:gravity="end"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/food_macronutrients_units"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginRight="54dp"
                    android:layout_marginEnd="54dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/secondary_text"/>
            </LinearLayout>

            <!-- Carbohydrates. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/food_carbos"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start"
                    android:textColor="@color/secondary_text"/>

                <EditText android:id="@+id/food_carbos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:gravity="end"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/food_macronutrients_units"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginRight="54dp"
                    android:layout_marginEnd="54dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/secondary_text"/>
            </LinearLayout>

            <!-- Fat. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/food_fat"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start"
                    android:textColor="@color/secondary_text"/>

                <EditText android:id="@+id/food_fat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:gravity="end"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/food_macronutrients_units"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginRight="54dp"
                    android:layout_marginEnd="54dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/secondary_text"/>
            </LinearLayout>

            <!-- Fiber. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:text="@string/food_fiber"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start"
                    android:textColor="@color/secondary_text"/>

                <EditText android:id="@+id/food_fiber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:gravity="end"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/food_macronutrients_units"
                    android:paddingTop="14dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginRight="54dp"
                    android:layout_marginEnd="54dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/secondary_text"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
