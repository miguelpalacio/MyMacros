<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selected_item"
    tools:context="com.miguelpalacio.mymacros.AddMealFragment"
    android:orientation="vertical">

    <!-- Default view when no foods. -->
    <TextView
        android:id="@+id/add_meal_empty_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:text="@string/add_meal_empty_page"
        android:visibility="invisible"/>

    <!-- Food list. -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_meal_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_background"
        android:minHeight="?android:attr/listPreferredItemHeight" />
</RelativeLayout>
